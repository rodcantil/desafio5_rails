      <%= link_to "Editar", edit_tweet_path(@tweet), class:"btn btn-sm btn-warning mx-2"%>
      <%= link_to "Volver", tweets_path, class:"btn btn-sm btn-secondary mx-2" %>
      </div>
    </div>
</div>