<p style="color: green"><%= notice %></p>
<% content_for :title, "Tweets" %>
<div class="d-flex col-8 mx-auto justify-content-between">
<div class="ms-3 my-3">
<%= form_with url: tweets_path, method: :get do |form|%>
<%= form.text_field :query_text, placeholder: "Buscador", value: params[:query_text], class:"form-control"%>
<%= form.submit "Buscar", class:"mt-2 btn btn-secondary" %>
<%end%>
</div>
<div class="mt-3 me-3">
  <%= link_to "Nuevo tweet", new_tweet_path, class:"btn btn-info"  %>
</div>

</div>
<div><% @tweets.each do |tweet| %>
  <div class="card col-8 mx-auto border-secondary">
    <div class="card-body">
      <h5 class="card-title mb-2"><%= tweet.description %></h5>
      <h6 class="card-subtitle text-body-secondary mb-2"><%= tweet.username %></h6>
      <div class="d-flex justify-content-end">
      <%= link_to "Ver tweet", tweet, class:"btn btn-sm btn-info" %>
      </div>
    </div>
  </div>
  <% end %>
<div class="d-flex justify-content-center my-3">
  <%== pagy_bootstrap_nav(@pagy) %>

</div>
</div>


  





