<% content_for :title, "Editar tweet" %>

<h1 class="text-center">Editar tweet</h1>

<div class="card col-8 mx-auto border-secondary">
    <div class="card-body">
      <h6 class="card-subtitle text-body-secondary mb-2"><%= render "form", tweet: @tweet %></h6>
      <div class="d-flex justify-content-end">
      <%= link_to "Editar", edit_tweet_path(@tweet), class:"btn btn-sm btn-warning mx-2"%>
      <%= button_to "Eliminar", @tweet, method: :delete, class:"btn btn-sm btn-danger mx-2"%>
      <%= link_to "Volver", tweets_path, class:"btn btn-sm btn-secondary mx-2" %>
      </div>
    </div>
</div>